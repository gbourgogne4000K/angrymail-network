# Server Configuration
PORT=3000
NODE_ENV=development
SITE_DOMAIN=angrymail.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=angrymail_user
DB_PASS=your_secure_password_here
DB_NAME=angrymail_db

# Admin Credentials (will be hashed on first run)
ADMIN_USER=admin
ADMIN_PASS=change_this_password

# Session Secret (generate a random string)
SESSION_SECRET=change_this_to_a_random_string_at_least_32_chars

# SMTP Configuration (optional, for email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@angrymail.com

# Optional Features
ENABLE_REGISTRATION=false
ENABLE_EMAIL_NOTIFICATIONS=false
